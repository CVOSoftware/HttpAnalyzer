<UserControl 
    x:Class="HttpAnalyzer.Components.UserControls.RequestActionPanelControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:HttpAnalyzer.Components.UserControls"
    mc:Ignorable="d" 
    d:DesignHeight="40" 
    d:DesignWidth="800">
    <Border Padding="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <ComboBox 
                Grid.Column="0" 
                Width="100"
                IsEnabled="{Binding IsRequestSending}"
                SelectedItem="{Binding SelectedHttpMethod}"
                ItemsSource="{Binding HttpMethods}"/>
            <TextBox 
                Grid.Column="1" 
                Margin="5, 0"
                IsEnabled="{Binding IsRequestSending}"
                Text="{Binding Url, UpdateSourceTrigger=PropertyChanged}"/>
            <Button 
                Grid.Column="2"
                Padding="10, 0"
                Width="100"
                Content="{Binding SendLabel}"
                Command="{Binding SendRequestCommand}"/>
        </Grid>
    </Border>
</UserControl>
